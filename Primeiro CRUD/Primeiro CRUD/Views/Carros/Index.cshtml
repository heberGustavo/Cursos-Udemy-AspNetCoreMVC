
@{
    ViewData["Title"] = "Listagem de dados";
}
@model IEnumerable<Primeiro_CRUD.Models.Carro>

<h1>Listagem de dados</h1>

<a asp-action="NovoCarro" class="btn btn-primary">Novo Carro</a>

<hr />

<div class="container">

    <table class="table">
        <thead>
            <!--Cabeçalho-->
            <tr>
                <th>Marca</th>
                <th>Nome</th>
                <th>Ano</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Marca</td>
                    <td>@item.Nome</td>
                    <td>@item.Ano</td>
                    <td>
                        <a asp-action="AtualizarCarro" asp-route-id="@item.CarroId" class="btn btn-info">Atualizar</a>
                        <a asp-action="Detalhes" asp-route-id="@item.CarroId" class="btn btn-warning">Detalhes</a>
                        <a asp-action="Excluir" asp-route-id="@item.CarroId" class="btn btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


