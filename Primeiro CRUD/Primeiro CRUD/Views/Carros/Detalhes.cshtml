@{
    ViewData["Title"] = "Detalhes";
}

@model Primeiro_CRUD.Models.Carro

<h1>Detalhes</h1>

<div class="container">
    <div class="row">
        <div class="col">
            <strong>Carro:</strong> @Model.Nome
</div>
    </div>
    <div class="row">
        <div class="col">
            <strong>Marca:</strong> @Model.Marca
        </div>
    </div>
    <div class="row">
        <div class="col">
            <strong>Ano:</strong> @Model.Ano
        </div>
    </div>
</div>

