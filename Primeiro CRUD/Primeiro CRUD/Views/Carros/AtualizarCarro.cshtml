
@{
    ViewData["Title"] = "Atualizar Carro";
}
@model Primeiro_CRUD.Models.Carro

<h1>Atualizar Carro</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AtualizarCarro">
            <input type="hidden" asp-for="CarroId" />

            <div class="form-group">
                <label asp-for="Marca" class="control-label"></label>
                <input asp-for="Marca" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Ano" class="control-label"></label>
                <input asp-for="Ano" class="form-control" />
            </div>
            <input type="submit" value="Atualizar" class="btn btn-info"/>

        </form>
        <br />
        <input asp-action="Index" class="btn btn-link" type="submit" value="Voltar" />
        
    </div>
</div>

