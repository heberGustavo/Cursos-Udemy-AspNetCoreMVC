@model IList<ProjetoMoeda02.Models.Moedas>

@{
    ViewData["Title"] = "Default";
}

<h4>Em qual moeda você prefere investir?</h4>

<form asp-controller="Moedas" asp-action="EscolhaDeMoeda" method="post">

    @for (int i = 0; i < Model.Count(); i++)
    {
        <input asp-for="@Model[i].Checkbox" type="checkbox" />
        <label>@Model[i].Nome</label>

        <input asp-for="@Model[i].MoedasId" type="hidden" />

        <br />
    }
    <button class="btn btn-outline-primary">Enviar</button>
</form>
