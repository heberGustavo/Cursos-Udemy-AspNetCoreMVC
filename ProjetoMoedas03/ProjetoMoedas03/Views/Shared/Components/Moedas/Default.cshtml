@model IList<ProjetoMoedas03.Models.Moedas>

@{
    ViewData["Title"] = "Default";
}

<h4>Em qual Moeda você investe?</h4>

<form asp-controller="Moedas" asp-action="EscolhaDaMoeda" method="post">

    @for (int i = 0; i < Model.Count(); i++)
    {
        <input asp-for="@Model[i].CheckboxPreenchido" type="checkbox" />
        <label>@Model[i].Nome</label>

        <input asp-for="@Model[i].MoedasId" type="hidden" />
        <br />
    }
    <button class="btn btn-primary">Enviar</button>

</form>