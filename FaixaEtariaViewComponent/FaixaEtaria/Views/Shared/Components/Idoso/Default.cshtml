@model IEnumerable<FaixaEtaria.Models.Pessoa>

<div class="card">
        <div class="card-header bg-primary text-light">Idosos Cadastrados <span class="badge badge-dark">@Model.Count()</span> </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Idade)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Idade)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.PessoaId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.PessoaId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.PessoaId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
